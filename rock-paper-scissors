import random as r

options = ['rock', 'paper', 'scissors']
computer_choice = r.choice(options)
human_choice = ''

while human_choice not in options:
    human_choice = input('Your choice: ')

if human_choice == computer_choice:
    print(f'No one wins. Human Choice: {human_choice}, Computer Choice: {computer_choice}')

elif human_choice == 'rock' and computer_choice == 'scissors':
    print(f'Human wins. Human Choice: {human_choice}, Computer Choice: {computer_choice}')

elif human_choice == 'scissors' and computer_choice == 'paper':
    print(f'Human wins. Human Choice: {human_choice}, Computer Choice: {computer_choice}')

elif human_choice == 'paper' and computer_choice == 'rock':
    print(f'Human wins. Human Choice: {human_choice}, Computer Choice: {computer_choice}')

else:
    print(f'Computer wins. Human Choice: {human_choice}, Computer Choice: {computer_choice}')
